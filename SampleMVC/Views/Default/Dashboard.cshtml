@model IEnumerable<SampleMVC.ViewModel.CustomerViewModel>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Dashboard</h2>

<br />
<p>
    @Html.ActionLink("Create New", "Customer", FormMethod.Get, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Customer Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone number
        </th>
        <th>
            Status
        </th>
        <th>
            Area
        </th>
        <th>
            Address
        </th>
        <th colspan="2" class="text-center"> Detail</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.customername)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.phonenumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.status)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.area)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.address)
    </td>
    <td>
        @using (Html.BeginForm("Customer", "Default", FormMethod.Get))
        {
            <input type="hidden" name="id" value="@item.customercode" />
            <input type="submit" class="btn btn-primary" value="Edit" />
        }
    </td>
    <td>
        @using (Html.BeginForm("Delete", "Default", FormMethod.Get))
        {
            <input type="hidden" name="id" value="@item.customercode" />
            <input type="submit" class="btn btn-warning" value="Delete" />
        }
    </td>

</tr>
    }

</table>